<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.View.Rotation.RotationDetailPage" Title="Перемещение">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Rfrom,  StringFormat='Rfrom: {0}'}" />
            <Label Text="{Binding Rto,  StringFormat='Rto: {0}'}" />
            <Switch IsToggled="{Binding IsRotatoning}"></Switch>
            
            <StackLayout Orientation="Horizontal" VerticalOptions="End" HorizontalOptions="CenterAndExpand">
                <!--<Button Text="Сохранить" BackgroundColor="Green" Clicked="SaveGoods" />
                <Button Text="Удалить" BackgroundColor="Red" Clicked="DeleteGoods" />-->
                <Button Text="OK" BackgroundColor="DeepSkyBlue" Clicked="OK" />
                <Button Text="Отмена" BackgroundColor="Red" Clicked="Cancel" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>